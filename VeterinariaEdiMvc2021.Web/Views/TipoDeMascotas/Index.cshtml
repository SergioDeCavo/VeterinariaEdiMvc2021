@model IEnumerable<VeterinariaEdiMvc2021.Entidades.ViewModels.TipoDeMascota.TipoDeMascotaListViewModel>

@{ ViewBag.Title = "Index"; }
<div>
    <a href="@Url.Action("Create","TipoDeMascotas")" class="btn btn-primary" style="float: right">Nuevo</a>
    <h2>Lista de Tipos de Mascotas</h2>

</div>
<hr />
@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg
    </div>}
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.TipoDeMascotaId }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Detalles", "Details", new { id = item.TipoDeMascotaId }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Borrar", "Delete", new { id = item.TipoDeMascotaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
</body>
</html>
