@model VeterinariaEdiMvc2021.Entidades.ViewModels.Droga.DrogaEditViewModel

@{ ViewBag.Title = "Edit"; }
<div>
    <h2>Edite una Droga</h2>

</div>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Droga</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model=>model.DrogaId)

            <div class="form-group">
                @Html.LabelFor(model => model.NombreDroga, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombreDroga, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreDroga, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-warning" />
                    @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    }

</body>
</html>
