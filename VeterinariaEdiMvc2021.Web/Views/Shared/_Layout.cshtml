<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                    <button type="button" class="btn btn-warning navbar-btn">Principal</button>
                    <button type="button" class="btn btn-warning navbar-btn">Contacto</button>
                    <button type="button" class="btn btn-warning navbar-btn">Enlace</button>
                    @Html.ActionLink("Principal", "Index", "Home")
                    @Html.ActionLink("Contacto", "Contact", "Home")
                    @Html.ActionLink("Enlace", "About", "Home")
                    @Html.ActionLink("Drogas", "Index", "Drogas")
                    @Html.ActionLink("F. Farmacèuticas", "Index", "FormasFarmaceuticas")
                    @Html.ActionLink("Laboratorios", "Index", "Laboratorios")
                    @Html.ActionLink("Provincias", "Index", "Provincias")
                    @Html.ActionLink("Tipos de Documentos", "Index", "TipoDeDocumentos")
                    @Html.ActionLink("Tipos de Mascotas", "Index", "TipoDeMascotas")
                    @Html.ActionLink("Tipos de Servicios", "Index", "TipoDeServicios")
                    @Html.ActionLink("Tipos de Tareas", "Index", "TipoDeTareas")
                    @Html.ActionLink("Razas", "Index", "Razas")
                    @Html.ActionLink("Localidades", "Index", "Localidades")
                </button>

            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
