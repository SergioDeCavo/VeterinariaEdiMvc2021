@model VeterinariaEdiMvc2021.Entidades.ViewModels.Medicamento.MedicamentoListViewModel

@{ ViewBag.Title = "Delete"; }
<div>
    <h2>Borre un Medicamento</h2>

</div>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Està seguro de borrar este registro?</h3>
    <div>
        <h4>Medicamento</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.NombreComercial)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NombreComercial)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TipoDeMedicamento)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TipoDeMedicamento)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FormaFarmaceutica)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FormaFarmaceutica)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Laboratorio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Laboratorio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PrecioVenta)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Suspendido)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Suspendido)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.MedicamentoId)
            @Html.ValidationSummary(true, "", new { @class = "text-Danger" });

            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-danger" /> |
                @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-success" });
            </div>
        }
    </div>
</body>
</html>
