@model IEnumerable<VeterinariaEdiMvc2021.Entidades.ViewModels.Localidad.LocalidadListViewModel>

@{ ViewBag.Title = "Index"; }
<div>
    <a href="@Url.Action("Create","Localidades")" class="btn btn-primary" style="float: right">Nuevo</a>
    <h2>Lista de Localidades</h2>

</div>
@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg
    </div>}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado de Localidades</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreLocalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreLocalidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provincia)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.LocalidadId }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.LocalidadId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Borrar", "Delete", new { id = item.LocalidadId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
