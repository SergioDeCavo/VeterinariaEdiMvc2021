@model PagedList.IPagedList<VeterinariaEdiMvc2021.Entidades.ViewModels.Localidad.LocalidadListViewModel>
@using PagedList.Mvc
@{ ViewBag.Title = "Index"; }
<div>
    <a href="@Url.Action("Create","Localidades")" class="btn btn-primary" style="float: right">Nuevo</a>
    <h2>Lista de Localidades</h2>

</div>
@using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "form-inline" }))
{
    <label>Filtar por:</label>
    @Html.DropDownList("provinciaSeleccionadaId", ViewBag.ListaProvincias as SelectList, htmlAttributes: new {@class = "form-control" })
    <input type="submit" class="btn btn-success" value="Filtrar"/>
}
<hr/>
@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg
    </div>}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado de Localidades</title>
</head>

<body>
    @Html.Partial("_ListaLocalidades", Model)

</body>
</html>
